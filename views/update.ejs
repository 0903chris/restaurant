   <body>
   
	
	<img src="data:<%= r.photomimetype %>;base64,<%= r.photo %>" />

   	<form ref='uploadForm'
            id='uploadForm'
            action='/update'
            method='post'
        <input type="hidden" name="id" value=<%= r._id %>>
   	 Name: <input type="text" name="name" value=<%= r.name %> required/><br>
