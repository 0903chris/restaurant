<label class="w3-label w3-validate">Rating: </label></p>

  <ol>
  <% g.forEach(function(grade) { %>
  <li><%= grade.score %> (<%= grade.user %>)</li>
  <% });                        %>
</ol>

<p>
<label class="w3-label w3-validate">Owner: </label><%= r.owner %></p>
